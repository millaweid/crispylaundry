        }
        button {
            background-color: #FF8800;
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            border-radius: 5px;
        }
        #fortune-cookie-container {
            position: relative;
        }
        #fortune-cookie {
            max-width: 100%;
            height: auto;
            border-radius: 5px;
            transition: transform 1s;
        }
