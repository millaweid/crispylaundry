<body>
    <div id="container">
        <h1>Your Virtual Fortune Cookie</h1>
        <p>Click the button below to reveal your fortune:</p>
        <div id="fortune-cookie-container">
            <img id="fortune-cookie" src="images/closed cookie.jpg" alt="Virtual Fortune Cookie">
        </div>
        <p id="fortune-message"></p>
        <button id="fortune-button">Open Fortune Cookie</button>
    </div>

    <script>
        var fortuneMessages = [
            "Your future is full of laughter and fun!",
            "A surprise is waiting for you around the corner.",
            "Adventure awaits - be prepared to embark on a new journey!",
            "You bring joy and positivity to everyone you meet.",
            "The best way to predict the future is to create it!",
            "You are a natural problem solver.",
            "Good luck is on your side today!",
            "Embrace new opportunities with an open heart.",
            "Your hard work will pay off in unexpected ways.",
            "Today is a great day to start something new."
        ];

        document.getElementById("fortune-button").onclick = function() {
            var randomMessage = fortuneMessages[Math.floor(Math.random() * fortuneMessages.length)];
            document.getElementById("fortune-message").innerText = randomMessage;
            document.getElementById("fortune-cookie").style.transform = "rotate(0deg)";
        };
    </script>
